# View contacts

set query_command="abook --mutt-query '%s'"
macro index a "|abook --add-email\n" 'add sender to abook'
macro pager a "|abook --add-email\n" 'add sender to abook'

# View URLs
macro index \cb "|urlview\n"
macro pager \cb "|urlview\n"
